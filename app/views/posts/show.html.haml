.posts-wrapper.row
  .post
    .post-head
      .name
        =@post.user.username
      .image.center-block
        =image_tag @post.image.url(:medium)
      %p.description
        =@post.description

      - if @post.user.id == current_user.id #only let user who created the post delete it
        .text-right.action-links
          =link_to "Delete...?", post_path(@post), style: 'color: #b30000;', method: :delete, data: {confirm: "This will delete the post... Are you sure?"}